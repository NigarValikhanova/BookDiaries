@{
    ViewData["Title"] = "Register";
}
@model Register



<!-- breadcrumb area start -->
<section class="breadcrumb__area include-bg pt-100 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__content p-relative z-index-1">
                    <h3 class="breadcrumb__title text-center">Account Page</h3>
                    <div class="breadcrumb__list text-center">
                        <span><a asp-action="index">Home</a></span>
                        <span>Register</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->


<!-- register area start -->
<section class="tp-login-area pb-140 p-relative z-index-1 fix">
    <div class="tp-login-shape">
        <img class="tp-login-shape-1" src="~/img/login/login-shape-1.png" alt="">
        <img class="tp-login-shape-2" src="~/img/login/login-shape-2.png" alt="">
        <img class="tp-login-shape-3" src="~/img/login/login-shape-3.png" alt="">
        <img class="tp-login-shape-4" src="~/img/login/login-shape-4.png" alt="">
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8">
                <div class="tp-login-wrapper">
                    <div class="tp-login-top text-center mb-30">
                        <h3 class="tp-login-title">REGISTER</h3>
                        <p>Already have an account?  <span><a asp-controller="Home" asp-action="Login">Sign In</a></span></p>
                    </div>
                    <div class="tp-login-option">
                        <div class="tp-login-social mb-10 d-flex flex-wrap align-items-center justify-content-center">
                            <div class="tp-login-option-item has-google">
                                <a href="#">
                                    <img src="~/img/icon/login/facebook.svg" alt="">
                                    Sign up with facebook
                                </a>
                            </div>
                        </div>
                        <div class="tp-login-mail text-center mb-40">
                            <p>or Sign up with <a href="#">Email</a></p>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                        </div>
                        <form asp-controller="Home" asp-action="Register" method="post">
                            <div class="tp-login-input-wrapper">
                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        <input asp-for="Username" placeholder="BookDiaries">
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="Username" asp-for="Username">Username</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        <input asp-for="Email" placeholder="bookdiaries@mail.com">
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="email" asp-for="Email">Your Email</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        <input asp-for="Password" id="tp_password1" type="password" placeholder="Min. 6 character">
                                    </div>
                                    <div class="tp-login-input-eye" id="password-show-toggle1">
                                        <span class="toggle-password" id="open-eye1">
                                            Show
                                        </span>
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="tp_password1" asp-for="Password">Password</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="tp-login-input-box">
                                    <div class="tp-login-input">
                                        <input id="tp_password2" type="password" asp-for="ConfirmPassword" placeholder="Min. 6 character">
                                    </div>
                                    <div class="tp-login-input-eye" id="password-show-toggle2">
                                        <span class="toggle-password" id="open-eye2">
                                            Show
                                        </span>
                                    </div>
                                    <div class="tp-login-input-title">
                                        <label for="tp_password2" asp-for="ConfirmPassword">Confirm Password</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>

                                 @if (User.IsInRole(SD.Role_Admin))
                                {
                                    <div class="tp-login-input-box">
                                        <div class="tp-login-input">
                                            <select asp-for="Role" asp-items="@Model.RoleList" class="form-select">
                                                <option disabled selected>-Select Role-</option>
                                            </select>
                                        </div>                                         
                                    </div>
                                }

                            </div>
                            <div class="tp-login-suggetions d-sm-flex align-items-center justify-content-between mb-20">
                                <div class="tp-login-remeber">
                                    <input id="remeber" type="checkbox">
                                    <label for="remember">I accept the terms of the Service & <a href="#">Privacy Policy</a>.</label>
                                </div>
                            </div>
                            <div class="tp-login-bottom">
                                <button class="tp-login-btn w-100" type="submit">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- register area end -->
@section Scripts{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('.toggle-password').forEach(function (element) {
                element.addEventListener('click', function () {
                    var passwordInputId = this.parentElement.previousElementSibling.querySelector('input').id;
                    var passwordInput = document.getElementById(passwordInputId);
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        this.textContent = 'Hide';
                    } else {
                        passwordInput.type = 'password';
                        this.textContent = 'Show';
                    }
                });
            });
        });

    </script>

    <script>
        @await Html.PartialAsync("_ValidationScriptsPartial")
    </script>
}


