@model ContactUser 


<!-- breadcrumb area start -->
<section class="breadcrumb__area include-bg text-center pt-95 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__content p-relative z-index-1">
                    <h3 class="breadcrumb__title">Keep In Touch with Us</h3>
                    <div class="breadcrumb__list">
                        <span><a asp-controller="Home" asp-action="Index">Home</a></span>
                        <span>Contact</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<!-- contact area start -->
<section class="tp-contact-area pb-100">
    <div class="container">
        <div class="tp-contact-inner">
            <div class="row">
                <div class="col-xl-9 col-lg-8">
                    <div class="tp-contact-wrapper">
                        <h3 class="tp-contact-title">Sent A Message</h3>

                        <div class="tp-contact-form">
                            <form asp-action="Index" method="post" id="contact-form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="tp-contact-input-wrapper">
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            <input asp-for="FullName" id="name" type="text" placeholder="Enter your full name">
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="name">Your Name and Surname</label>
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            <input asp-for="Email" id="email" type="email" placeholder="Enter your email">
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="email">Your Email</label>
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            <input asp-for="Subject" id="subject" type="text" placeholder="Write your subject">
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="subject">Subject</label>
                                        </div>
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                    <div class="tp-contact-input-box">
                                        <div class="tp-contact-input">
                                            <textarea asp-for="Message" id="message" name="message" placeholder="Write your message here..."></textarea>
                                        </div>
                                        <div class="tp-contact-input-title">
                                            <label for="message">Your Message</label>
                                        </div>
                                    </div>
                                </div>                               
                                <div class="tp-contact-btn">
                                    <button type="submit">Send Message</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4">
                    <div class="tp-contact-info-wrapper">
                        <div class="tp-contact-info-item">
                            <div class="tp-contact-info-icon">
                                <span>
                                    <img src="~/img/contact/contact-icon-1.png" alt="">
                                </span>
                            </div>
                            <div class="tp-contact-info-content">
                                <p data-info="mail"><a href="mailto:contact@bookdiaries.com">contact@bookdiaries.com</a></p>
                                <p data-info="phone"><a href="tel:452-22-90">+994 77 111 22 33</a></p>
                            </div>
                        </div>
                        <div class="tp-contact-info-item">
                            <div class="tp-contact-info-icon">
                                <span>
                                    <img src="~/img/contact/contact-icon-2.png" alt="">
                                </span>
                            </div>
                            <div class="tp-contact-info-content">
                                <p>
                                    <a href="https://maps.app.goo.gl/iU2ATi8q957zsmSk6" target="_blank">
                                        300 Nizami st. <br> 28May, Baku 1101
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="tp-contact-info-item">
                            <div class="tp-contact-info-icon">
                                <span>
                                    <img src="~/img/contact/contact-icon-3.png" alt="">
                                </span>
                            </div>
                            <div class="tp-contact-info-content">
                                <div class="tp-contact-social-wrapper mt-5">
                                    <h4 class="tp-contact-social-title">Find on social media</h4>

                                    <div class="tp-contact-social-icon">
                                        <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                                        <a href="#"><i class="fa-brands fa-twitter"></i></a>
                                        <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- contact area end -->
<!-- map area start -->
<section class="tp-map-area pb-120">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="tp-map-wrapper">
                    <div class="tp-map-hotspot">
                        <span class="tp-hotspot tp-pulse-border">
                            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="6" cy="6" r="6" fill="#821F40" />
                            </svg>
                        </span>
                    </div>
                    <div class="tp-map-iframe">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.422490729418!2d49.85059817514773!3d40.3773279580379!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d0d71e9898b%3A0x2a9847f372425d29!2sIT%20Brains%20Academy!5e0!3m2!1sen!2saz!4v1712008376757!5m2!1sen!2saz"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- map area end -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
