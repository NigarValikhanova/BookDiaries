@{
    ViewData["Title"] = "Index";
}


@section Styles{
    <link rel="stylesheet" href="~/admin/css/lib/datatable/dataTables.bootstrap.min.css">
}

@model List<Coupon>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Coupon </strong>
                    </div>
                    <div class="card-body">
                        <a asp-controller="Coupon" asp-action="Create" asp-area="admin" type="button" class="btn btn-info"><i class="fa fa-plus-square"></i>&nbsp; Create Coupon</a>
                    </div>
                </div><!-- /# card -->
            </div>


            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Coupon List</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Code</th>
                                    <th>Minimum Amount</th>
                                    <th>Discount Percent</th>
                                    <th>Operation</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Code</td>
                                        <td>@item.DiscountAmount</td>
                                        <td>@item.DiscountPercent</td>
                                        <td>
                                            <div class="w-75 btn-group" role="group">
                                                <a asp-area="admin" asp-controller="Coupon" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-2">
                                                    <i class="fa fa-edit"></i> Edit
                                                </a>
                                                <a asp-area="admin" asp-controller="Coupon" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                                    <i class="fa fa-trash-o"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
@section Scripts{
    <script src="~/admin/js/lib/data-table/datatables.min.js"></script>
    <script src="~/admin/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/admin/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="~/admin/js/lib/data-table/jszip.min.js"></script>
    <script src="~/admin/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="~/admin/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>
}


