@{
    var status= Context.Request.Query["status"];
    var pending = "";
    var inprocess = "";
    var completed = "";
    var approved = "";
    var all = "";

    switch (status)
    {
        case "pending":
            pending = "active";
            break;
        case "inprocess":
            inprocess = "active";
            break;
        case "completed":
            completed = "active";
            break;
        case "approved":
            approved = "active";
            break;
        default:
            all = "active";
            break;

    }
}


@section Styles{
    <link rel="stylesheet" href="~/admin/css/lib/datatable/dataTables.bootstrap.min.css">
    <style>
        .btn-primary.active {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff
        }
    </style>
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Order Status </strong>
                    </div>
                    <div class="card-body text-center">
                        <a asp-controller="Order" asp-action="Index" asp-route-status="inprocess" type="button" class="btn btn-info  @inprocess"> In Process</a>
                        <a asp-controller="Order" asp-action="Index" asp-route-status="pending" type="button" class="btn btn-info  @pending"> Payment Pending</a>
                        <a asp-controller="Order" asp-action="Index" asp-route-status="completed" type="button" class="btn btn-info @completed"> Completed</a>
                        <a asp-controller="Order" asp-action="Index" asp-route-status="approved" type="button" class="btn btn-info @approved"> Approved</a>
                        <a asp-controller="Order" asp-action="Index" asp-route-status="all" type="button" class="btn btn-info @all"> All</a>
                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Order List</strong>
                    </div>
                    <div class="card-body">
                        <table id="tblData" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Phone Number</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th>Operation</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
@section Scripts{
    <script src="~/admin/js/lib/data-table/datatables.min.js"></script>
    <script src="~/admin/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/admin/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="~/admin/js/lib/data-table/jszip.min.js"></script>
    <script src="~/admin/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/admin/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="~/admin/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>
    <script src="~/js/order.js"></script>
}

